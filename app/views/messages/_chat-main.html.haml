.chat-main


  .chat-main__message-header
    .chat-main__message-header_box1
      .chat-main__message-header_test test
      .chat-main__message-header_test_member
        .chat-main__message-header_test_member-name member:name
    .chat-main__message-header_box2
      .chat-main__message-header_edit 
        = link_to "Edit","#"


  .chat-main__message-list
    .chat-main__message-list_box
      .chat-main__message-list_box1
        .chat-main__message-list_box1-message1 name
        .chat-main__message-list_box1-message2 time
      .chat-main__message-list_box2
        .chat-main__message-list_box2-message おはよう!
      .chat-main__message-list_box3
        .chat-main__message-list_box3-message1-2
          .chat-main__message-list_box3-message1 name
          .chat-main__message-list_box3-message2 time
        .chat-main__message-list_box3-message3 message


  .chat-main__message-form
    %form.chat-main__message-form_boxes
      .chat-main__message-form_box1
        %input.chat-main__message-form_box1_message{:placeholder => "type a message"}
        .chat-main__message-form_box1_icon 
          %label{for: "form"}
            = icon('fa', 'image')
          %input.hidden{type: "file", id:"form"}
      .chat-main__message-form_box2
        .chat-main__message-form_box2_send
          %input{type: "submit", name: "commit", value: "Send", class: "submit-btn"}
          